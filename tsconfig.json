{
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react",
    "paths": {
      "~*": ["./*"]
    },
    "typeRoots": ["./src/common/types", "./node_modules/@types"],
    "outDir": "dist/server",
    "strict": true,
    "target": "ES2016",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"]
}
